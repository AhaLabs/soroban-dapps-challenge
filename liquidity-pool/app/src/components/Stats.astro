<div class="columns">
  <div>
    <strong>Reserves</strong>
    <div class="columns">
      <div>
        <span data-reserve-usdc>-</span> USDC
      </div>
      <div>
        <span data-reserve-btc>-</span> BTC
      </div>
    </div>
  </div>
  <div style="margin-left: 1em">
    <strong>Pool fees</strong>
    <div>
      0.3%
    </div>
  </div>
</div>

<script>
  import { liquidityPool } from '../contracts'
  import * as wallet from '../wallet'
  import { formatBalance } from '../util'

  const usdc = document.querySelector('[data-reserve-usdc]')
  const btc = document.querySelector('[data-reserve-btc]')

  wallet.onChange(async ({ isSignedIn }) => {
    if (!isSignedIn) return

    const [reservesUsdc, reservesBtc] = await liquidityPool.getRsrvs()

    usdc.innerHTML = formatBalance(reservesUsdc, 7)
    btc.innerHTML = formatBalance(reservesBtc, 7)
  })
</script>

